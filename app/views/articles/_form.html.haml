= form_for @article do |f|
  - if @article.errors.any?
    .alert.alert-danger
      %ul
        - @article.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.text_area :body, class: 'form-control'
    = f.file_field :image
    = f.hidden_field :image_cache

  = f.submit 'Save', class: 'btn btn-primary float-right'
